<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/ColorGraySettingsBackground</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/ColorSettingsResume</item>
        <!-- Used for the background -->
        <item name="android:background">@color/ColorGraySettingsBackground</item>
        <item name="android:windowTitleStyle">@style/MyTitleTextStyle</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyTitleTextStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>


    <style name="PreferenceScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/ColorSettingsTitle</item>
        <item name="android:textColorSecondary">@color/ColorSettingsResume</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/ColorGraySettingsBackground</item>
        <item name="android:textColorAlertDialogListItem">@color/ColorSettingsResume</item>
    </style>


</resources>
