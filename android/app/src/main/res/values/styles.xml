<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/ColorGraySettingsBackground</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="AppTheme.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Toolbar.PopUp" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:textColorPrimary">@color/ColorSettingsTitle</item>
        <item name="android:textColorSecondary">@color/ColorSettingsResume</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/ColorGraySettingsBackground</item>
        <item name="android:textColorAlertDialogListItem">@color/ColorSettingsResume</item>
    </style>


</resources>
